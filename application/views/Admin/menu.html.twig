

{% extends "base.html.twig" %}

{% block head %}
    <div class="col-xs-12 text-center" >
        <h2>Administration</h2>
    </div>
{% endblock %}

{% block main_part %}
    <div class="main-message col-md-4 col-md-offset-4"></div>
    <div class="container-fluid" id="main">
        <div class="row">
            <div class="col-md-10">
                <table class="table table-bordered" >
                    <thead>
                        <tr>
                            <th class="col-md-5 text-center" >Fichiers/Dosssier</th>
                            <th class="col-md-5 text-center" >Contenu</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-md-5" >
                                <div class="col-md-12" id="jsContainer"></div>
                            </td>
                            <td class="col-md-5" >
                                <div class="col-md-12"id="informations" >
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-primary btn-block">
                    Ajouter Dossier
                </button> 
                <button type="button" class="btn btn-info btn-block">
                    Ajouter fichier
                </button> 
                <button type="button" class="btn btn-warning btn-block">
                    Supprimer
                </button>

                <form class="form-horizontal" id="search_form" >
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="appendedsearch">Rechercher</label>
                            <div class="controls">
                                <div class="search input-group" role="search" id="mySearch">
                                    <input type="search" id="word" class="form-control" placeholder="Rechercher...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="change" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 id="head_title" style="color: black;" ></h3>
                </div>
                <form class="form-group form-horizontal" id="form_change" action="#" >
                    <div class="modal-body">
                        <div class="loginmodal-container">
                            <input id="input_content" type="text" name="user" placeholder="Username" class="form-control" >
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" type="submit">Confirmer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 id="confirm_title" style="color: black;" ></h3>
                </div>
                <div class="modal-body">
                    <p id="confirm_text" ></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal" type="button">Annuler</button>
                    <button class="btn btn-danger" id="confirm_button" type="button">Confirmer</button>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ js() ~ 'admin/main.js' }}"></script>
{% endblock %}

{% block footer %}
    <div class="text-center col-md-12" >
        <ul>
            <li>
                <a href="#">Deconnexion</a>        
            </li>
        </ul>
    </div>
{% endblock %}