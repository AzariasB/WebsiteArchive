
{% extends "base.html.twig" %}

{% macro display_score(info,rank) %}
    <tr>
        <td> {{ rank }} </td>
        <td> {{ info.score }} </td>
        <td> {{ info.pseudo }} </td>
        <td> {{ info.Nbr_questions }}</td>
        <td> {{ info.Temps_total }}</td>
        <td> {{ info.Lettres == 0 ? '&#x2610' : '&#x2611'  }}</td>
        <td> {{ info.Chiffres == 0 ? '&#x2610' : '&#x2611' }}</td>
        <td> {{ info.Ponctuation == 0 ? '&#x2610' : '&#x2611'  }}</td>
    </tr>
{% endmacro %}
{% block head %}
{% endblock %}

{% block main_part %}
    <div class="col-sm-10 col-sm-offset-1 col-xs-12 text-center">
        <table class="table table-hover" >
            <thead class="fixedHeader" >
                <tr id="table-header" >
                    <th class="text-center" >Rang</th>
                    <th class="text-center">Score</th>
                    <th class="text-center">Pseudo</th>
                    <th class="text-center" >Nombre de questions</th>
                    <th class="text-center" >Temps total</th>
                    <th class="text-center">Lettres</th>
                    <th class="text-center">Chiffres</th>
                    <th class="text-center">Ponctuation</th>
                </tr>
            </thead>
            <tbody>
                {% import _self as displayer %}
                {% set rang = 1 %}
                {% for score in scores %}
                    {{ displayer.display_score(score,rang) }}
                    {% set rang = rang + 1 %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block footer %}
    <footer>
        <div class="col-xs-4" >
            <a href="{{ site_url('Projets_perso/Morse_decodage') }}" class="btn btn-default" ><span class="glyphicon glyphicon-chevron-left" ></span>Retour au morse</a>
        </div>
        <div class="col-xs-4 text-center ">
            <a href="{{ site_url('Accueil') }}" class="btn btn-primary">Accueil</a>
        </div>
    </footer>
{% endblock %}